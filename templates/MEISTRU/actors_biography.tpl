<article class="box story">
	<div class="box_in dark_top userinfo_top">
		<div class="avatar">
			<a href="#"><span class="cover" style="background-image: url({poster_medium});">{name}</span></a>
		</div>
	</div>
	<div class="box_in">
		<div class="tab-content">
			<ul class="usinf">
				<li><div class="ui-c1 grey">Имя</div> <div class="ui-c2">{name}[fullname]({fullname})[/fullname]</div></li>
				
				
				[birthday][years]<li><div class="ui-c1 grey">Возраст</div> {years}</li>[/years]
				<li><div class="ui-c1 grey">Дата рождения</div> <div class="ui-c2">{birthdate}</div></li>
				[birthplace]<li><div class="ui-c1 grey">Место рождения</div> <div class="ui-c2">{birthplace}</div></li>[/birthplace][/birthday]
				
				[deathday]<li><div class="ui-c1 grey">Дата Смерти</div> <div class="ui-c2">{deathday}</div></li>
				[deathplace]<li><div class="ui-c1 grey">Место Смерти</div> <div class="ui-c2">{deathplace}</div></li>[/deathplace][/deathday]
				
				[gender]<li><div class="ui-c1 grey">Пол</div> {gender}</li>[/gender]
				
				[growth]<li><div class="ui-c1 grey">Рост</div> {growth}</li>[/growth]
				[profession]<li><div class="ui-c1 grey">Специальность</div> {profession}</li>[/profession]
				[hasawards]<li><div class="ui-c1 grey">Кол-во наград</div> {hasawards}</li>[/hasawards]
			</ul>
			[description]<h4 class="heading">О персоне</h4> <p>{description}</p>[/description]
		</div>
	</div>
</article>
<h1><font color="red">Фильмы с {name}:</font></h1>
